{
  "$id": "https://gcn.nasa.gov/schema/main/gcn/notices/classic/near/alert.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "unevaluatedProperties": false,
  "title": "Alert",
  "description": "NEAR Lightcurve Alert",
  "allOf": [{ "$ref": "../../core/DateTime.schema.json" }],
  "properties": {
    "$schema": true,
    "lightcurve_image_url": {
      "type": "string",
      "description": "The URL for the lightcurve JPEG associated with the trigger."
    },
    "lightcurve_textfile_url": {
      "type": "string",
      "description": "The URL for the lightcurve textfile associated with the trigger."
    }
  }
}
