{
  "name": "@nasa-gcn/schema",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "validate:prettier": "prettier --check .",
    "validate:jsonschema": "node validate.mjs **/*.schema.json",
    "validate": "run-s validate:*"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.schema.json": "node validate.mjs"
  }
}
